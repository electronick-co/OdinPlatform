# ============================================================
# ODIN Platform — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================

# Database (required everywhere)
DATABASE_URL="postgresql://user:password@localhost:5432/odin_platform"

# Discord (required for bot)
DISCORD_TOKEN="your-discord-bot-token"
DISCORD_GUILD_ID="your-discord-guild-id"

# NextAuth (required for web — Session 3)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"

# Google OAuth (Session 3)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Node environment
NODE_ENV="development"
